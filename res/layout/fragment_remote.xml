<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:gravity="center"
    android:weightSum="5"
    android:background="@android:color/background_dark"
    android:orientation="horizontal" >
    
     <LinearLayout 
		android:layout_width="0dp"
        android:layout_weight="1"
    	android:layout_height="fill_parent"
    	android:orientation="vertical" />
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
    	android:layout_height="fill_parent"
    	android:weightSum="9.5"
    	android:orientation="vertical" >
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/playPouseImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:clickable="true"
        	android:src="@drawable/play_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/backImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:clickable="true"
        	android:src="@drawable/back_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/fastBackImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:clickable="true"
        	android:src="@drawable/fast_back_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/nextImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:clickable="true"
        	android:src="@drawable/next_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/prevImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:clickable="true"
        	android:src="@drawable/prev_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/fullImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1" 
        	android:clickable="true"
        	android:src="@drawable/full_scr_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
    </LinearLayout>
    
    <LinearLayout 
		android:layout_width="0dp"
        android:layout_weight="1"
    	android:layout_height="fill_parent"
    	android:orientation="vertical" >
        
        <ImageView
        	android:id="@+id/iconImageView"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:alpha="0.25"
        	android:src="@drawable/player_vlc" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
    	android:layout_height="fill_parent"
    	android:weightSum="9.5"
    	android:orientation="vertical" >
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/stopPouseImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:clickable="true"
        	android:src="@drawable/stop_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/forImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:clickable="true"
        	android:src="@drawable/forward_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/fastForImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:clickable="true"
        	android:src="@drawable/fast_for_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/plusImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:clickable="true"
        	android:src="@drawable/plus_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/minusImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:clickable="true"
        	android:src="@drawable/minus_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
        
        <ImageView
        	android:id="@+id/muteImageView"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:clickable="true"
        	android:src="@drawable/mute_selector" />
        
        <ImageView
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.5" />
    </LinearLayout>

     <LinearLayout 
		android:layout_width="0dp"
        android:layout_weight="1"
    	android:layout_height="fill_parent"
    	android:orientation="vertical" />
    
</LinearLayout>
